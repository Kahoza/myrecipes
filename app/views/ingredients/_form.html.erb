<%= render 'shared/errors', obj: @ingredient %>


<div class="row">
  <div class="col-md-12">
    <%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-8 offset-md-2">
        <%= f.label :name %>
      </div>
      <div class="col-md-8 offset-md-2">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter ingredient", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-8 offset-md-2">
        <%= f.submit(@ingredient.new_record? ? " Add ingredient" : "Update ingredient", class: "btn btn-danger btn-lg") %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="center col-md-8 offset-md-2">
    [<%= link_to "Cancel request and return to recipes", recipes_path %>]
  </div>
</div>


