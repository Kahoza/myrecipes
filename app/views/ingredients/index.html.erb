<h1 class= "center col-md-8 offset-md-2">Available ingredients</h1>
<hr/>

<div class="center col-md-4 offset-4">
  <%= will_paginate %>
  <% @ingredients.each do |ingredient| %>
    <ul class="listing">
      <div class="card">
        <div >
          <li class="chef-title"><p><%= link_to ingredient.name.capitalize, ingredient_path(ingredient) %></p></li>
          <li><small><%= pluralize(ingredient.recipes.count, "recipe") if ingredient.recipes %></small></li>
          <% if logged_in? && current_chef.admin? %>
            <li><%= link_to "Edit this ingredient", ingredient_path(ingredient) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
