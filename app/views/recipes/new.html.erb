<h1 class= "center col-md-8 offset-md-2">Add a new recipe</h1>
<hr/>

<% if @recipe.errors.any? %>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card bg-danger">
      <div class="card-header">
        <p class=card-title>
          <%= pluralize(@recipe.errors.count, "error") %>
          prohibited this <%= @recipe.class %> from being saved:
        </p>
        <div class="card-body">
          <ul>
            <% @recipe.errors.full_messages.each do |message|%>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-8 offset-md-2">
        <%= f.label :name %>
      </div>
      <div class="col-md-8 offset-md-2">
        <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-8 offset-md-2">
        <%= f.label :description %>
      </div>
      <div class="col-md-8 offset-md-2">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps of the recipe" %>
      </div>
    </div>
    <div class="form-grou">
      <div class="col-md-8 offset-md-2">
        <%= f.submit class: "btn btn-danger btn-lg" %>
      </div>
    </div>
    <% end %>
    <div class="center col-md-8 offset-md-2">
      [<%= link_to "Cancel request and return to recipes", recipes_path %>]
    </div>
  </div>
</div>
