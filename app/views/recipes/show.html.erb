<h1 align="center"><%= @recipe.name.capitalize %></h1>
<hr/>
<div class="container col-md-12 show-page">
  <h4 class="show-description col-md-12 "><strong>Description: </strong></h4>
  <%= simple_format(@recipe.description.capitalize) %>
  <% if @recipe.ingredients.any? %>
  <p>Ingredients: <%= render @recipe.ingredients %></p>
  <% end %>
  <div class="center col-md-3 offset-9">
    <p class="center">Created <%= time_ago_in_words(@recipe.created_at) %> ago by <strong><%= @recipe.chef.chefname.upcase %></strong>
    </p>
    <p><%= link_to gravatar_for(@recipe.chef), chef_path(@recipe.chef) %></p>
  </div>
  <div class="recipe-actions">
    <% if logged_in? && (current_chef == @recipe.chef || current_chef.admin?) %>
      <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-dark btn-lg" %>
      <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, class: "btn btn-danger btn-lg" %>
    <% end %>
    <%= link_to "Return to recipes", recipes_path, class: "btn btn-dark btn-lg" %>
  </div>
</div>

<hr></hr>
<% if logged_in? %>
  <div class="form-group">
    <div class="col-md-12">
      <h3>Want to leave a comment?</h3>
      <%= form_for([@recipe, @comment], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Enter your comment here" %>
        </div>
      </div>
      <div>
        <div class="col-md-12">
          <%= f.submit "Submit comment", class: "btn btn-danger btn-lg" %>
        </div>
      </div>
      <% end %>
      <div class="center col-md-8 offset-md-2">
        [<%= link_to "Cancel request and return to recipes", recipes_path %>]
      </div>
    </div>
<% end %>

<% if @recipe.comments != 0 %>
  <div class="row" >
    <div class="col-md-12">
      <h3 >Previous Comments: </h3>
        <div id="messages card-index">
          <%= render partial: 'comments/comments', object: @comments %>
        </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <h3>No Comments Yet!</h3>
    </div>
  </div>
<% end %>
